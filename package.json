{
   "name": "my-portfolio",
   "version": "0.1.0",
   "private": true,
   "author": {
      "name": "muhammad_yousuf",
      "url": "https://twitter.com/myousuf_here"
   },
   "description": "Personal website",
   "engines": {
      "node": ">=18.0.0"
   },
   "scripts": {
      "dev": "next dev --turbo",
      "build": "next build",
      "start": "next start",
      "lint": "next lint",
      "type-check": "tsc --pretty --noEmit",
      "turbo": "next dev --turbo",
      "check-format": "prettier --check .",
      "format": "prettier --write \"**/*.{ts,tsx,md}\"",
      "check-lint": "eslint . --ext ts --ext tsx --ext js",
      "prepare": "husky install",
      "preview": "next build && next start",
      "test:ci": "jest --ci",
      "test:coverage": "jest --coverage",
      "test:watch": "jest --watchAll",
      "test": "jest",
      "test-all": "npm run check-format && npm run check-lint && npm run type-check && npm run test && npm run build"
   },
   "dependencies": {
      "@types/node": "20.1.0",
      "@types/react": "18.2.5",
      "@types/react-dom": "18.2.4",
      "autoprefixer": "10.4.14",
      "axios": "^1.4.0",
      "classnames": "^2.3.2",
      "eslint": "8.40.0",
      "framer-motion": "^10.12.8",
      "gsap": "^3.11.5",
      "i18next": "^22.5.1",
      "i18next-browser-languagedetector": "^7.0.2",
      "locomotive-scroll": "^4.1.4",
      "next": "^13.4.5-canary.4",
      "next-themes": "^0.2.1",
      "postcss": "8.4.23",
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "react-i18next": "^12.3.1",
      "react-icons": "^4.8.0",
      "react-locomotive-scroll": "^0.2.2",
      "react-use-measure": "^2.1.1",
      "tailwind-merge": "^1.12.0",
      "tailwindcss": "3.3.2",
      "typescript": "5.0.4"
   },
   "devDependencies": {
      "@ianvs/prettier-plugin-sort-imports": "^4.0.1",
      "@tailwindcss/forms": "^0.5.3",
      "@tailwindcss/line-clamp": "^0.4.4",
      "@tailwindcss/typography": "^0.5.9",
      "@testing-library/dom": "^9.3.0",
      "@testing-library/jest-dom": "^5.16.5",
      "@testing-library/react": "^14.0.0",
      "@types/jest": "^29.5.2",
      "@types/locomotive-scroll": "^4.1.0",
      "@typescript-eslint/eslint-plugin": "^5.59.2",
      "eslint-config-airbnb": "^19.0.4",
      "eslint-config-next": "^13.4.4",
      "eslint-config-prettier": "^8.8.0",
      "eslint-plugin-jest": "^27.2.1",
      "eslint-plugin-jsx-a11y": "^6.7.1",
      "eslint-plugin-prettier": "^4.2.1",
      "eslint-plugin-react": "^7.32.2",
      "eslint-plugin-react-hooks": "^4.6.0",
      "eslint-plugin-security": "^1.7.1",
      "eslint-plugin-simple-import-sort": "^10.0.0",
      "eslint-plugin-sonarjs": "^0.19.0",
      "eslint-plugin-tailwindcss": "^3.12.1",
      "husky": "^8.0.3",
      "jest": "^29.5.0",
      "jest-environment-jsdom": "^29.5.0",
      "jest-runner-eslint": "^2.1.0",
      "lint-staged": "^13.2.2",
      "prettier": "^2.8.8",
      "prettier-plugin-tailwindcss": "^0.3.0",
      "pretty-quick": "^3.1.3",
      "tailwind-scrollbar": "^3.0.0"
   },
   "prettier": {
      "arrowParens": "always",
      "singleQuote": true,
      "tabWidth": 3,
      "trailingComma": "es5"
   },
   "husky": {
      "hooks": {
         "pre-commit": "lint-staged"
      }
   },
   "lint-staged": {
      "*.{js,jsx,ts,tsx}": [
         "npm run lint -- --fix",
         "git add"
      ]
   },
   "jest-runner-eslint": {
      "cliOptions": {
         "ignorePath": "./.gitignore"
      }
   }
}
